pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'git@github.com:AKASH8525/Flask-Docker-App.git', branch: 'main', credentialsId: 'git (github jenkins)' // <-- Correct way to specify Git and credentials
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t $DOCKER_IMAGE:$DOCKER_TAG .'
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run -d -p 5000:5000 $DOCKER_IMAGE:$DOCKER_TAG' // Corrected typo here
                }
            }
        }
        stage('Test Flask App') {
            steps {
                script {
                    sh 'curl http://localhost:5000'
                }
            }
        }
        stage('Post Actions') {
            steps {
                echo 'Deployment completed!'
            }
        }
    }
}
