pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'flask-docker-app'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/AKASH8525/Flask-Docker-App.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t $DOCKER_IMAGE:$DOCKER_TAG .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run -d -p 5000:5000 $DOCKER_IMAGE:$DOCKER_TAG'
                }
            }
        }

        stage('Test Flask App') {
            steps {
                script {
                    // Optional: Add tests to check if the Flask app is running correctly
                    sh 'curl http://localhost:5000'
                }
            }
        }

        stage('Post Actions') {
            steps {
                echo 'Deployment completed!'
            }
        }
    }
}
